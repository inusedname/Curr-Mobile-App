<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/compare_item_image_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/compare_item_image"
        />

    <TextView
        android:id="@+id/compare_item_image_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điện thoại iPhone 15 128GB"
        android:fontFamily="@font/raleway_black"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/compare_item_image_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.700.000 đ"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginStart="10dp"/>

</LinearLayout>