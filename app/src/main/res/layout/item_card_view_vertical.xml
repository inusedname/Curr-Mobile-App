<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/compare_item_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_phone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/item_image"
                android:background="@drawable/card_radius_10"
                android:adjustViewBounds="true"
                android:clipToOutline="true">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/compare_item_name_view"
                    android:maxWidth="170dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điện thoại iPhone 15 128GB"
                    android:fontFamily="@font/raleway_black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/compare_item_price_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá từ  17.990.000 đ"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="13sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/compare_item_number_place_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hà Nội, Hồ Chí Minh"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_light"
                    android:textSize="13sp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tới nơi bán"
                    android:fontFamily="@font/raleway_light"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>